#!/usr/bin/env node

const spawn    = require('child_process').spawn;
const inquirer = require('inquirer');

const MENU = [
	{name:'查询', fun: () => {console.log('query')}},
]

inquirer.prompt([
	type: 'checkbox',
	name: 'select',
	message: 'u-san stock cli',
	choices: MENU
])

